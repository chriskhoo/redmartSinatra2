<h3>Admin view: Form to create new user / Register here</h3>

<form action="/users" method="post">

  <div class="form-group">
    <label for="name">Name</label>
    <input id="name" type="text" name="user[name]" value="" placeholder="First, Last">
  </div>

  <div class="form-group">
    <label> Email
      <input type="text" name="user[email]" value="" placeholder="username@host.com">
    </label>
  </div>

  <div class="form-group">
    <label>Password
      <input type="text" name="user[password]" value="" placeholder="at least 6 characters">
    </label>
  </div>

  <div class="form-group">
    <label> Credit Card Number
      <input type="text" name="user[cc_number]" value="" placeholder="12 digits without dashes">
    </label>
  </div>

  <div class="form-group">
    <label>Address
      <input type="text" name="user[address]" value="" placeholder="unit, street, city">
    </label>
  </div>

  <input type="submit" value="submit">

</form>
